# Per-instance config. Copy to /etc/default/mc/<instance>.env
# Example: /etc/default/mc/fabric_kmz.env

# Required: server directory and jar file.
MC_SERVER_DIR=/home/wyre/mcserver/Fabric/fabric_kmz
MC_JAR_NAME=fabric-server-launch.jar

# Optional Java settings.
MC_JAVA_BIN=/usr/bin/java
MC_XMX=4G
MC_XMS=4G

# Optional tmux settings.
MC_TMUX_SESSION=mc-fabric_kmz
MC_STOP_TIMEOUT=120
MC_STOP_COMMAND=stop
MC_STARTUP_GRACE=3

# Optional backup settings.
MC_BACKUP_DIR=/home/wyre/mcserver/backups
MC_BACKUP_PREFIX=fabric_kmz
MC_BACKUP_LEVEL=3
MC_BACKUP_RETENTION_DAYS=14
# Used by mc-set-backup-timer.sh to generate /etc/systemd/system/mc-backup@<instance>.timer
MC_BACKUP_ON_CALENDAR=*-*-* 11:30:00
MC_BACKUP_RANDOMIZED_DELAY_SEC=15m
MC_BACKUP_PERSISTENT=true

# Space-separated extra 7z exclude patterns.
# MC_BACKUP_EXCLUDES="logs cache"
